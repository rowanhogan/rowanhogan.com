!!!5
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}

    = stylesheet_link_tag "site.css"
    = javascript_include_tag "application.js"
    = yield_content :head

  %body{:class => page_classes}

  .wrapper

    %header#header
      .container
        %h1 Rowan Hogan

        #avatar= image_tag "http://gravatar.com/avatar/bcc3b40bdd3fe398aad85a6abda0f91b?size=400"

        %nav#nav
          = link_to 'About', '#', :class => 'active icon-copy'
          -#= link_to 'Stuff', '#'
          = link_to 'Contact', '#', :class => 'icon-envelope'

          #position-indicator

    %section#main
      .container= yield

    %footer#footer
      .container
        %ol
          %li= link_to 'Google Plus', '#', :class => 'icon-github'
          %li= link_to 'Google Plus', '#', :class => 'icon-google-plus'
          %li= link_to 'Google Plus', '#', :class => 'icon-twitter'
          %li= link_to 'Google Plus', '#', :class => 'icon-lastfm'
          %li= link_to 'Google Plus', '#', :class => 'icon-linkedin'

    :plain
      <script>document.write('<script src="http://' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js?snipver=1"></' + 'script>')</script>
