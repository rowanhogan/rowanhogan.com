          = link_to 'Twitter', 'https://twitter.com/rowanhogan', class: "icon-twitter icon-only", target: "_blank"
          = link_to 'LinkedIn', 'http://www.linkedin.com/in/rowanhogan', class: "icon-linkedin icon-only", target: "_blank"
          = link_to 'Last.fm', 'http://www.last.fm/user/rehogan', class: 'icon-lastfm icon-only', target: "_blank"

        %h1 Rowan Hogan
        %h2.subtitle Full-stack designer.

