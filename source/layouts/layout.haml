!!! 5
%html{ lang: "en" }
  %head
    %title= "#{data.page.title} - Rowan Hogan dot com."

    %meta{ charset: "utf-8" }
    %meta{ "http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1" }
    %meta{ name: "description", content: "Full-stack designer from Brisbane, Australia." }
    %meta{ name: "viewport", content: "width=device-width, minimal-ui" }

    = favicon_tag "favicon.ico"
    = stylesheet_link_tag "application"
    = stylesheet_link_tag "print", media: 'print'

    = javascript_include_tag "//use.typekit.net/arj3ujg.js"
    :javascript
      try{Typekit.load();}catch(e){}

    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.2/html5shiv.js"

  %body{ class: page_classes }
    %header.site-header
      .container
        = link_to '/', class: 'logo' do
          /[if lt IE 9]
            = image_tag 'logo.svg'

          %svg{ x: "0px", y: "0px", viewBox: "0 0 308.5 512", style: "enable-background:new 0 0 308.5 512;"  }
            %path{ d: "M273.8,168.5c-5.9-6.3-12.6-11.7-19.9-16.5l-71.2,71.2c7.8,3.7,15,9.1,20.5,16.9c7.3,10.2,11.8,24.3,11.8,43.1V512h93.5 V269.7C308.5,228.4,296.7,193,273.8,168.5z" }
            %path{ d: "M183.4,133c-6.5,0-13,0.7-19.4,1.7L0,298.7v39.5l203.8-203.8C197.2,133.6,190.5,133,183.4,133z" }
            %polygon{ points: "93.5,137.3 93.5,0 0,0 0,137.3 54.1,137.3 0,191.4 0,230.9 93.5,137.4  " }
            %polygon{ points: "40.8,512 93.5,459.3 93.5,419.8 1.3,512   " }
            %polygon{ points: "0,445.5 93.5,352 93.5,312.5 0,406  " }


        %nav.site-nav
          = partial "layouts/nav"

    %section.site-main
      .container
        = yield

    %footer.site-footer
      .container
        %nav.site-nav
          = partial "layouts/social"

    = javascript_include_tag "application"

    - if build?
      = partial "layouts/analytics"
