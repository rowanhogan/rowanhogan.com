!!! 5
%html{ lang: "en" }
  %head
    %title= "#{data.page.title} - Rowan Hogan dot com."

    %meta{ charset: "utf-8" }
    %meta{ "http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1" }
    %meta{ name: "description", content: "Full-stack designer from Brisbane, Australia." }
    %meta{ name: "viewport", content: "width=device-width, minimal-ui" }

    = favicon_tag "favicon.ico"
    = stylesheet_link_tag "application"
    = stylesheet_link_tag "print", media: 'print'

    = javascript_include_tag "//use.typekit.net/arj3ujg.js"
    :javascript
      try{Typekit.load();}catch(e){}

    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.2/html5shiv.js"

  %body{ class: page_classes }
    %header.site-header
      .container
        = link_to '/', class: 'logo' do
          %svg{ x: "0px", y: "0px", viewBox: "-82.8 0 290.3 512", style: "enable-background:new -82.8 0 290.3 512;"  }
            %g
              %path{d: "M174.7,189.1c-5.5-5.9-11.8-11-18.7-15.5l-67,67c7.4,3.5,14.1,8.6,19.3,15.9c6.8,9.6,11.1,22.9,11.1,40.6v215l87.9-87.7\r\n\t\tV284.2C207.3,245.3,196.2,212,174.7,189.1z"}
              %path{d: "M89.6,155.7c-6.1,0-12.2,0.6-18.2,1.6L-82.8,311.5v37.1L108.8,157C102.7,156.2,96.3,155.7,89.6,155.7z"}
              %polygon{points: "5.1,159.7 5.1,0.7 -82.8,88.4 -82.8,159.7 -31.9,159.7 -82.8,210.6 -82.8,247.7 5.1,159.8 \t"}
              %polygon{points: "-44.4,512 5.1,462.5 5.1,425.3 -81.5,512 \t"}
              %polygon{points: "-82.8,449.5 5.1,361.6 5.1,324.4 -82.8,412.3 \t"}

        %nav.site-nav
          = partial "layouts/nav"

    %section.site-main
      .container
        = yield

    %footer.site-footer
      .container
        %nav.site-nav
          = partial "layouts/social"

    = javascript_include_tag "application"

    - if build?
      = partial "layouts/analytics"
