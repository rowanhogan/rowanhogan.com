    %meta{ :charset => "utf-8" }

    %meta{ "http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1" }
    %meta{ name: "description", content: "Full-stack designer from Brisbane, Australia." }
    %meta{ name: "viewport", content: "width = device-width" }

    %title= data.page.title || "Rowan Hogan - Full-stack designer"

