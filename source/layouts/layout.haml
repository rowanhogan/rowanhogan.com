!!! 5
%html{ lang: "en" }
  %head
    %title= "#{data.page.title} - Rowan Hogan"

    %meta{ charset: "utf-8" }
    %meta{ "http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1" }
    %meta{ name: "description", content: "Full-stack designer from Brisbane, Australia." }
    %meta{ name: "viewport", content: "width=device-width, minimal-ui" }

    = favicon_tag "favicon.ico"
    = stylesheet_link_tag "application"
    = stylesheet_link_tag "print", media: 'print'

    = javascript_include_tag "//use.typekit.net/arj3ujg.js"
    :javascript
      try{Typekit.load();}catch(e){}

    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.2/html5shiv.js"

  %body{ class: page_classes }
    %header.site-header
      .container
        %nav.site-nav
          = partial "layouts/nav"

    %section.site-main
      .container
        %h1.page-title{ style: ("display: none" if data.page.show_title == false) }
          = data.page.title

        = yield

    %footer.site-footer
      .container
        %nav.site-nav
          = partial "layouts/social"

    = javascript_include_tag "application"

    - if build?
      = partial "layouts/analytics"
